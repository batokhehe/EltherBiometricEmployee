<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.eltherbiometric.employee">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="false" />

    <application
        tools:replace="android:icon"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:roundIcon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".SplashscreenActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.upload.UploadActivity"
            android:label="@string/title_activity_upload"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ocr.OcrActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.registration.RegisterActivity"
            android:label="@string/registration"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.registration.FaceRecognitionActivity"
            android:label="@string/registration"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.presence.FaceRecognitionActivity"
            android:label="@string/face_recognition"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.fingerprint.FingerPrintActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ui.fingerprint.MatchActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ui.fingerprint.ProcessActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ui.fingerprint.ResultActivity"
            android:screenOrientation="landscape" />


        <!-- Register Fingerprint -->
        <activity
            android:name=".ui.registration.FingerPrintActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ui.fingerprint.ProcessFingerprintRegisterActivity"
            android:screenOrientation="portrait" />

        <!-- Presence Fingerprint -->
        <activity
            android:name=".ui.presence.FingerPrintActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ui.fingerprint.ProcessFingerprintPresenceActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ui.fingerprint.MatchFingerprintPresenceActivity"
            android:screenOrientation="landscape" />


        <!-- DB MANAGER -->
        <activity
            android:name=".utils.AndroidDatabaseManager"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="ocr" />
    </application>

</manifest>