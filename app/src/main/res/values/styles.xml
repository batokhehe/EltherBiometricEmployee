<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="et_hint" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="et_setting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:hint">@string/ip_address</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="et_setting_pass">
        <item name="android:maxLength">5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:hint">Password</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:drawablePadding">@dimen/activity_horizontal_padding</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="et_email">
        <item name="android:maxLength">20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:hint">@string/prompt_email</item>
        <item name="android:singleLine">true</item>
        <!--<item name="android:gravity">center</item>-->
        <item name="android:textSize">12dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_padding</item>
        <item name="android:background">@drawable/et_email_shape</item>
        <item name="android:drawableLeft">@drawable/ic_account</item>
        <item name="android:drawablePadding">@dimen/activity_horizontal_padding</item>
    </style>

    <style name="et_password">
        <item name="android:maxLength">20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:hint">@string/prompt_password</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textPassword</item>
        <!--<item name="android:gravity">center</item>-->
        <item name="android:textSize">12dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_padding</item>
        <item name="android:background">@drawable/et_password_shape</item>
        <item name="android:drawableLeft">@drawable/ic_lock</item>
        <item name="android:drawablePadding">@dimen/activity_horizontal_padding</item>
    </style>

</resources>
